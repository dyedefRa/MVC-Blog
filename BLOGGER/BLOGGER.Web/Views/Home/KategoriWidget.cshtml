@using BLOGGER.BusinessLayer;
@using BLOGGER.Data;

@model List<Kategori>


@{

    Repository<Makale> makaleler = new Repository<Makale>();
}



<div class="card my-4">
    <h5 class="card-header">Kategoriler</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    @foreach (var kategori in Model)
                    {


                        int sayi = makaleler.Select().Where(x => x.KategoriID == kategori.Id&&x.Aktif==true).Count();



                        <li>
                            <a style="color:rebeccapurple" href=@Url.Action("KategoriDetay","Home",new {id=kategori.Id })>@kategori.Adi (@sayi) </a>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </div>
</div>
