
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Giris Yap</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href=@Url.Content("/Content/Other/Login/images/icons/favicon.ico") />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/vendor/bootstrap/css/bootstrap.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/fonts/iconic/css/material-design-iconic-font.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/vendor/animate/animate.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/vendor/css-hamburgers/hamburgers.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/vendor/animsition/css/animsition.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/vendor/select2/select2.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/vendor/daterangepicker/daterangepicker.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/css/util.css")>
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/Other/Login/css/main.css")>
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                <form class="login100-form validate-form" action=@Url.Content("/Home/GirisYap") method="post">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        giris yap
                    </span>

                    @if (Session["girisSorun"] != null)
    {
                <p style="color:red;font-weight:bold;">@Session["girisSorun"].ToString()</p>
}
                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input class="input100" type="text" name="kullaniciAdi" placeholder="Kullanıcı Adı">
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" name="parola" placeholder="Parola">
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    </div>

                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="beniHatirla">
                        <label class="label-checkbox100" for="ckb1">
                            Beni hatırla
                        </label>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Giriş Yap
                        </button>
                    </div>
                   
                    <div class="text-center p-t-90">
                        <a href=@Url.Content("/Home/UyeOl")>Kayıt Ol</a> -<a class="txt1" href="#">
                            Parolanı mı unuttun ?
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src=@Url.Content("/Content/Other/Login/vendor/jquery/jquery-3.2.1.min.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("/Content/Other/Login/vendor/animsition/js/animsition.min.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("/Content/Other/Login/vendor/bootstrap/js/popper.js")></script>
    <script src=@Url.Content("/Content/Other/Login/vendor/bootstrap/js/bootstrap.min.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("/Content/Other/Login/vendor/select2/select2.min.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("/Content/Other/Login/vendor/daterangepicker/moment.min.js")></script>
    <script src=@Url.Content("/Content/Other/Login/vendor/daterangepicker/daterangepicker.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("/Content/Other/Login/vendor/countdowntime/countdowntime.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("/Content/Other/Login/js/main.js")></script>

</body>
</html>