                            <span>Anasayfa</span>
                        </a>
                    </li>

                    @*KATEGORILER*@
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-th"></i>
                            <span>Kategori</span>
                        </a>
                        <ul class="sub">
