                                <a href=@Url.Content("/AdminKategori/Create")><i class="icon-plus"></i> Kategori Ekle</a>
                            </li>
                            <li><a href=@Url.Content("/AdminKategori/Index")><i class="icon-list"></i> Kategori Listele</a></li>

                        </ul>
                    </li>

                    @*MAKALE*@
                    <li class="sub-menu">
