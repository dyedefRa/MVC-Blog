@model BLOGGER.Data.Makale

@{
    ViewBag.Title = "makaleEkle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}



@using (Html.BeginForm("makaleEkle","Admin",FormMethod.Post,new {@enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h3>Makale Oluştur</h3>
    @if (Session["makaleSorun"]!=null)
    {
        <p style="color:red;"> @Session["makaleSorun"].ToString() </p>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.KategoriID, "Kategori :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("KategoriID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KategoriID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Baslik, "Başlık :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Icerik, "İçerik :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Icerik, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Fotoğraf Seç :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" class="btn btn-success" name="foto" accept=".jpg,.png,.gif,.JPEG,.jpeg"   />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Etiketler",new { @class = "control-label col-md-2" })
        <div class="col-md-10">
           @*@Html.TextBox("Etiketler")*@
            @*BOOSTRAP TAGS INPUT OLAYI*@
            <input type="text" id="Etiketler" name="Etiketler" data-role="tagsinput" class="bootstrap-tagsinput" />
        </div>
    </div>





    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Oluştur" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Makale Listesine Dön", "MakaleListele")
</div>
