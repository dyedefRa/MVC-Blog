@model BLOGGER.Data.Makale

@{
    ViewBag.Title = "MakaleDuzenle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}



@using (Html.BeginForm("MakaleDuzenle","Admin",FormMethod.Post, new { @enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Makale Düzenle</h4>
    @if (Session["makaleDuzenleSorun"]!=null)
    {
    <p style="color:red;font-weight:bold">@Session["makaleDuzenleSorun"].ToString() </p>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.KategoriID, "Kategori :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("KategoriID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KategoriID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Baslik, "Başlık :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control " } })
            @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Icerik, "İçerik :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Icerik, new { htmlAttributes = new { @class = "form-control " } })
            @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Fotoğraf:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img src="@Model.Fotograf.Orta" alt="" />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Yeni Fotoğraf seçin :", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" accept=".jpg,.png,.jpeg,.JPEG" name="Fotog" value="" />
        </div>
    </div>





    <div class="form-group">
        @Html.LabelFor(model => model.UyeID, "Yazar :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(Model.Uye.AdSoyad.ToString())
        </div>
    </div>







    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "MakaleListele","Admin")
</div>
