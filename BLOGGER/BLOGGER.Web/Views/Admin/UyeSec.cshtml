@model BLOGGER.Data.Uye

@{
    ViewBag.Title = "UyeSec";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using (Html.BeginForm("YetkiVer","Admin",FormMethod.Get)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     

        <div class="form-group">
            @Html.Label("Rol vereceğiniz üyeyi seçiniz", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id", (IEnumerable<SelectListItem>) ViewBag.uyeler)
             
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Onayla" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Uye Listesine Dön", "OnayliUyeler")
</div>
