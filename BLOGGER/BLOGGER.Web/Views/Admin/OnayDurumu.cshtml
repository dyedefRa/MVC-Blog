@model BLOGGER.Data.Uye

@{
    ViewBag.Title = "UyeOnayIptal";
    Layout = "~/Views/Shared/_Admin.cshtml";
}



@if (Model.Onay == true)
{
    <h3>@Model.AdSoyad  adlı üyenin onayını iptal etmek istediğinize emin misiniz? (Yeniden onaylandırabilirsiniz..)</h3>
}
else
{
    <h3>@Model.AdSoyad  adlı üyeyi onaylamak istediğinize emin misiniz? (Yeniden iptal edebilirsiniz..)</h3>
}
<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Fotograf ")
        </dt>

        <dd>
            <img src=@Url.Content(Model.Fotograf.Kucuk) alt="Alternate Text" />
        </dd>
        <br />

        <dt>
            @Html.Label("Kullanıcı Adı")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KullaniciAdi)
        </dd>


        <dt>
            @Html.Label("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.Label("Ad Soyad")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>





        <dt>
            @Html.DisplayNameFor(model => model.Yetki.Yetkisi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetkisi)
        </dd>

        <dt>
            @Html.Label("Onay Durumu")
        </dt>

        <dd>
            @if (Model.Onay == true)
            {
                @Html.Label("Onayli")
            }
            else
            {
                @Html.Label("Onaysız")
            }
        </dd>


    </dl>

    @using (Html.BeginForm("OnayDurumu", "Admin",FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="hidden" name="id" value=@Model.Id />
            <input type="submit" value="Kabul" class="btn btn-default" /> |
            @if (Model.Onay == true)
            {
                @Html.ActionLink("Onayli üye listesine geri dön", "OnayliUyeler")
            }
            else
            {
                @Html.ActionLink("Onaysiz üye listesine geri dön", "OnaysizUyeler")
            }

        </div>
    }
</div>
